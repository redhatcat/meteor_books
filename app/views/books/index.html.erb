<h1>Listing books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Isbn</th>
    <th>Publish date</th>
    <th>Genre</th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%=h book.title %></td>
    <td><%=h book.isbn %></td>
    <td><%=h book.publish_date %></td>
    <td><%=h book.genre %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Destroy', book, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New book', new_book_path %>
